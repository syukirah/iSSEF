        <div class="col-sm-9">


            <div class="jumbotron">
                <h2>Create New Service</h2>


                <p>* Required fields</p>


                <!--begin HTML Form-->
                <form class="form-horizontal" role="form" method="post" action=" ">

                    <div class="form-group">
                        <label for="service_name" class="col-sm-3 control-label"><span class="required">*</span> Service
                            Name:</label>
                        <div class="col-sm-9">
                            <input type="text" required="required" class="form-control" id="service_name"
                                   name="service_name" placeholder="Service Name">
