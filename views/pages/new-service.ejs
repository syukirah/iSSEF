                        <div class="col-sm-9">
                            <textarea class="form-control" row="4" name="message" required="required"
                                      placeholder="Tell us your service details."></textarea>
                        </div>
                    </div>


                    <div class="form-group">
                        <div class="col-sm-offset-3 col-sm-2 col-sm-offset-3 ">
                            <button type="submit" id="submit" name="submit" class="btn btn-primary btn-signup">SUBMIT
                            </button>
                        </div>
